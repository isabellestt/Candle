{
    "version": 2,
    "builds": [
        { "src": "fe/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
        { "src": "be/package.json", "use": "@vercel/node" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "be/dist/app.js" },
        { "src": "/(.*)", "dest": "fe/dist/index.html" }
    ]
}